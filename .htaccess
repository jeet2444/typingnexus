<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1. Direct access to existing files/folders in the root
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 2. Redirect root to dist/index.html
  RewriteRule ^$ dist/index.html [L]

  # 3. Handle assets and existing files inside dist folder
  # Checks if the requested path exists inside the dist directory
  RewriteCond %{DOCUMENT_ROOT}/dist/$1 -f [OR]
  RewriteCond %{DOCUMENT_ROOT}/dist/$1 -d
  RewriteRule ^(.*)$ dist/$1 [L]

  # 4. Single Page Application (SPA) routing
  # Send all other requests to dist/index.html so React Router can handle them
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . dist/index.html [L]
</IfModule>
