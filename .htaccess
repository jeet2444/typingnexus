<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1. Allow direct access to PHP files (deploy, save_settings)
  RewriteRule \.php$ - [L]

  # 2. Key assets should be served from dist
  RewriteCond %{DOCUMENT_ROOT}/dist/$1 -f
  RewriteRule ^(.*)$ dist/$1 [L]

  # 3. Everything else (including root) goes to dist/index.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteRule ^ dist/index.html [L]
</IfModule>
