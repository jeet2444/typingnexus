  # 1. Serve root / from dist/index.html
  RewriteRule ^$ dist/index.html [L]

  # 2. Force serve files from dist/ if they exist
  RewriteCond %{DOCUMENT_ROOT}/dist/$1 -f
  RewriteRule ^(.*)$ dist/$1 [L,QSA]

  # 3. Support /admin routing
  RewriteCond %{REQUEST_URI} ^/admin [NC]
  RewriteRule ^ admin/index.html [L]

  # 4. SPA Fallback: Everything else to dist/index.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . dist/index.html [L]
</IfModule>
